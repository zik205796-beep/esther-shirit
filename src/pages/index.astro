---
import Layout from '../layouts/Layout.astro';
---

<Layout title="אסתר שירית — מטפלת הוליסטית בתל אביב">

  <!-- Hero -->
  <section class="relative min-h-screen flex items-center justify-center text-center text-white px-4 overflow-hidden">
    <!-- Background layers -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary-dark via-primary to-[#4a1942]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,rgba(184,134,11,0.15),transparent_60%)]"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_left,rgba(255,255,255,0.05),transparent_50%)]"></div>
    <div class="blob w-96 h-96 bg-secondary -top-20 -right-20 opacity-[0.08]"></div>
    <div class="blob w-72 h-72 bg-purple-300 bottom-10 left-10 opacity-[0.06]"></div>
    
    <!-- Decorative floating elements -->
    <div class="absolute top-1/4 right-10 text-4xl opacity-20 animate-[bounce_3s_ease-in-out_infinite]">🌿</div>
    <div class="absolute bottom-1/3 left-10 text-3xl opacity-20 animate-[bounce_4s_ease-in-out_infinite_0.5s]">✦</div>
    <div class="absolute top-1/3 left-1/4 text-2xl opacity-10 animate-[bounce_5s_ease-in-out_infinite_1s]">🌸</div>

    <div class="relative z-10 max-w-3xl">
      <div class="fade-in">
        <p class="text-secondary-light text-sm tracking-[0.3em] uppercase mb-6">טיפול הוליסטי בתל אביב</p>
        <h1 class="text-6xl md:text-8xl font-black mb-6 leading-[0.9] font-serif">
          אסתר<br/>שירית
        </h1>
        <div class="divider mb-6"></div>
        <p class="text-xl md:text-2xl font-light leading-relaxed mb-10 text-white/85 max-w-lg mx-auto">
          מלווה נשים בדרך לריפוי, איזון ושקט פנימי — דרך הגוף, הנפש והריח
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/booking"
             class="inline-block bg-gradient-to-l from-secondary to-secondary-light text-white font-bold px-10 py-4 rounded-full text-lg transition-all hover:scale-105 shadow-xl hover:shadow-secondary/30">
            📅 הזמנת תור
          </a>
          <a href="https://wa.me/972552400842?text=היי%20אסתר,%20אשמח%20לשמוע%20עוד"
             target="_blank" rel="noopener"
             class="inline-block bg-white/10 backdrop-blur-sm border border-white/20 text-white font-bold px-10 py-4 rounded-full text-lg transition-all hover:bg-white/20">
            💬 שיחת היכרות
          </a>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-[bounce_2s_ease-in-out_infinite]">
        <svg class="w-6 h-6 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/></svg>
      </div>
    </div>
  </section>

  <!-- Stats Bar -->
  <section class="bg-white py-6 shadow-sm relative z-10 -mt-1">
    <div class="max-w-4xl mx-auto px-4 grid grid-cols-3 gap-4 text-center">
      {[
        { num: '10+', label: 'שנות ניסיון' },
        { num: '500+', label: 'מטופלות' },
        { num: '4', label: 'תחומי מומחיות' },
      ].map(s => (
        <div class="fade-in">
          <p class="text-2xl md:text-3xl font-black text-gradient">{s.num}</p>
          <p class="text-xs md:text-sm text-gray-500">{s.label}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Services -->
  <section class="max-w-6xl mx-auto px-4 py-24 pattern-overlay">
    <div class="text-center mb-16">
      <p class="text-secondary text-sm tracking-[0.2em] uppercase mb-3 fade-in">מה אני מציעה</p>
      <h2 class="text-4xl md:text-5xl font-bold text-primary mb-4 fade-in font-serif">השירותים שלי</h2>
      <div class="divider fade-in"></div>
    </div>
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {[
        { icon: '🧭', name: 'לייף קואצ׳ינג', desc: 'ליווי אישי לבהירות, מיקוד והגשמה עצמית. נמצא יחד את הדרך — בקצב שלך.', color: 'from-purple-50 to-pink-50' },
        { icon: '💆‍♀️', name: 'עיסוי', desc: 'עיסוי מרגיע ומשחרר שמשלב טכניקות לשחרור מתחים ויצירת זרימה.', color: 'from-pink-50 to-orange-50' },
        { icon: '🌸', name: 'ארומתרפיה', desc: 'טיפול בשמנים אתריים טהורים שמרגיעים את הנפש ומאזנים מבפנים.', color: 'from-orange-50 to-yellow-50' },
        { icon: '🌺', name: 'פרחי באך', desc: 'תמציות פרחים טבעיות לאיזון רגשי. מתאים למתח, חרדה ושינויים.', color: 'from-yellow-50 to-green-50' },
      ].map((s, i) => (
        <a href="/services" class={`group block bg-gradient-to-br ${s.color} rounded-2xl p-8 hover-lift text-center border-2 border-transparent glow-border fade-in`}>
          <div class="w-20 h-20 mx-auto mb-5 bg-white rounded-2xl shadow-md flex items-center justify-center text-4xl group-hover:scale-110 transition-transform">
            {s.icon}
          </div>
          <h3 class="text-xl font-bold text-primary mb-3">{s.name}</h3>
          <p class="text-gray-600 text-sm leading-relaxed">{s.desc}</p>
          <p class="mt-4 text-secondary text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity">קראי עוד →</p>
        </a>
      ))}
    </div>
  </section>

  <!-- About Me -->
  <section class="relative py-24 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-bl from-cream via-white to-cream-dark"></div>
    <div class="blob w-80 h-80 bg-primary top-0 right-0"></div>
    <div class="max-w-5xl mx-auto px-4 relative z-10">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="fade-in-right order-2 md:order-1">
          <p class="text-secondary text-sm tracking-[0.2em] uppercase mb-3">הכירו אותי</p>
          <h2 class="text-4xl font-bold text-primary mb-4 font-serif">קצת עליי</h2>
          <div class="divider !mr-0 mb-6"></div>
          <p class="text-lg leading-relaxed text-gray-700 mb-4">
            שמי אסתר שירית, ואני מטפלת הוליסטית עם למעלה מ-10 שנות ניסיון.
            הדרך שלי התחילה מתוך חיפוש אישי אחרי ריפוי ושקט — ומאז אני מלווה
            נשים רבות בתהליכים של שינוי, צמיחה והתחדשות.
          </p>
          <p class="text-gray-600 leading-relaxed mb-6">
            אני מאמינה שהגוף והנפש מחוברים, ושכל אחת מחזיקה בתוכה את הכוח להירפא.
            הקליניקה שלי היא מרחב בטוח ומפנק — בואי לנשום.
          </p>
          <a href="/about" class="inline-flex items-center gap-2 text-primary font-bold hover:text-secondary transition group">
            קראי עוד 
            <span class="group-hover:-translate-x-1 transition-transform">←</span>
          </a>
        </div>
        <div class="fade-in-left order-1 md:order-2 flex justify-center">
          <div class="relative">
            <div class="w-72 h-72 md:w-80 md:h-80 bg-gradient-to-br from-primary/10 to-secondary/10 rounded-[2rem] rotate-3 flex items-center justify-center">
              <div class="w-64 h-64 md:w-72 md:h-72 bg-white rounded-[1.5rem] -rotate-3 shadow-xl flex items-center justify-center text-8xl">
                🧘‍♀️
              </div>
            </div>
            <div class="absolute -bottom-4 -left-4 bg-secondary text-white text-sm font-bold px-5 py-2 rounded-full shadow-lg">
              ✦ 10+ שנות ניסיון
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-24 pattern-overlay">
    <div class="max-w-5xl mx-auto px-4">
      <div class="text-center mb-16">
        <p class="text-secondary text-sm tracking-[0.2em] uppercase mb-3 fade-in">ממליצות</p>
        <h2 class="text-4xl md:text-5xl font-bold text-primary mb-4 fade-in font-serif">מה אומרות עליי</h2>
        <div class="divider fade-in"></div>
      </div>
      <div class="grid md:grid-cols-3 gap-6">
        {[
          { name: 'מיכל כ.', age: '34', text: 'אחרי שנים שרצתי מטיפול לטיפול, אצל אסתר סוף סוף הרגשתי שמישהי באמת רואה אותי. הקואצ׳ינג שינה לי את הראש — ממש.', stars: 5 },
          { name: 'שירן א.', age: '28', text: 'הגעתי עם כאבי גב כרוניים ומתח נפשי. אחרי סדרת עיסויים וארומתרפיה, הגוף שלי פשוט אמר תודה. ממליצה בחום!', stars: 5 },
          { name: 'נועה מ.', age: '41', text: 'פרחי הבאך עזרו לי בתקופה מאוד סוערת. אסתר ידעה בדיוק איך להרכיב את הנוסחה. מרגישה כמו בן אדם חדש.', stars: 5 },
        ].map((t, i) => (
          <div class={`glass rounded-2xl p-8 hover-lift fade-in`}>
            <div class="flex gap-1 mb-4">
              {Array(t.stars).fill('⭐').map(s => <span class="text-sm">{s}</span>)}
            </div>
            <p class="text-gray-700 leading-relaxed mb-6 italic">"{t.text}"</p>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center text-white text-sm font-bold">
                {t.name[0]}
              </div>
              <div>
                <p class="font-bold text-primary text-sm">{t.name}</p>
                <p class="text-xs text-gray-400">גיל {t.age}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process -->
  <section class="bg-white py-24">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-16">
        <p class="text-secondary text-sm tracking-[0.2em] uppercase mb-3 fade-in">איך זה עובד</p>
        <h2 class="text-4xl font-bold text-primary mb-4 fade-in font-serif">3 צעדים פשוטים</h2>
        <div class="divider fade-in"></div>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {[
          { step: '01', icon: '📞', title: 'שיחת היכרות', desc: 'נדבר בקצרה כדי שאבין מה את צריכה ואיזה טיפול מתאים.' },
          { step: '02', icon: '📅', title: 'קובעות תור', desc: 'בוחרת תאריך ושעה שנוחים לך — ישירות מהאתר.' },
          { step: '03', icon: '✨', title: 'מתחילות', desc: 'מגיעה לקליניקה, נושמת, ומתחילה את המסע שלך.' },
        ].map(s => (
          <div class="text-center fade-in group">
            <div class="w-20 h-20 mx-auto mb-4 bg-gradient-to-br from-primary to-primary-light rounded-2xl flex items-center justify-center text-3xl text-white shadow-lg group-hover:scale-110 transition-transform">
              {s.icon}
            </div>
            <span class="text-xs text-secondary font-bold tracking-widest">{s.step}</span>
            <h3 class="text-lg font-bold text-primary mt-1 mb-2">{s.title}</h3>
            <p class="text-gray-600 text-sm leading-relaxed">{s.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="relative py-20 px-4 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-dark via-primary to-[#4a1942]"></div>
    <div class="blob w-96 h-96 bg-secondary top-0 right-0 opacity-[0.08]"></div>
    <div class="relative z-10 max-w-2xl mx-auto text-center text-white">
      <h2 class="text-3xl md:text-5xl font-bold mb-4 font-serif fade-in">מוכנה להתחיל<br/>את השינוי?</h2>
      <div class="divider mb-6 fade-in"></div>
      <p class="text-lg text-white/80 mb-10 fade-in">שיחת היכרות ראשונה — ללא עלות וללא התחייבות</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center fade-in">
        <a href="/booking"
           class="inline-block bg-gradient-to-l from-secondary to-secondary-light text-white font-bold px-10 py-4 rounded-full text-lg transition-all hover:scale-105 shadow-xl">
          📅 הזמנת תור
        </a>
        <a href="https://wa.me/972552400842?text=היי%20אסתר,%20אשמח%20לשיחת%20היכרות"
           target="_blank" rel="noopener"
           class="inline-block bg-white/10 backdrop-blur-sm border border-white/20 text-white font-bold px-10 py-4 rounded-full text-lg transition-all hover:bg-white/20">
          📞 דברי איתי
        </a>
      </div>
    </div>
  </section>

</Layout>
